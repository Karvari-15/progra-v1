@page
@model WebApp.Pages.Vehiculo.GridModel
@{
}
<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Vehiculo
        </div>
        <div class="card-body">
            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Marca</th>
                                <th>Matricula</th>
                                <th>Color</th>
                                <th>Modelo</th>
                                <th>FechaModelo</th>
                                <th>Defectos</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.MarcaVehiculoId</td>
                                    <td>@item.Descripcion </td>
                                    <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.MarcaVehiculoId">
                                            <i class='bx bxs-edit'></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-primary"
                                                onclick="MarcaVehiculoGrid.OnClickEliminar(@item.MarcaVehiculoId)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
